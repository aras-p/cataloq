<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Latin</th>
    <th>Height</th>
    <th>Width</th>
    <th>Color</th>
    <th>Bloom1</th>
    <th>Bloom2</th>
    <th>Conditions</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= link_to item.name, item %></td>
    <td><%= link_to item.latin, item %></td>
    <td><%= item.height %></td>
    <td><%= item.width %></td>
    <td><%= item.color %></td>
    <td><%= item.bloom1 %></td>
    <td><%= item.bloom2 %></td>
    <td><%= item.conditions %></td>
    <td><%= image_tag(item.picture_url, :width => 100) if item.picture.present? %></td>
    <td><%= link_to 'Edit', edit_item_path(item), :class => "btn btn-default btn-xs"  %></td>
    <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
  </tr>
<% end %>
</table>

